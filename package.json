{
  "name": "houseblock",
  "version": "0.1.0",
  "private": true,
  "description": "HouseBlock - A microservices system for AI, automation, and Web3",
  "scripts": {
    "dev": "pnpm --filter web-landing dev",
    "dev:web": "pnpm --filter web-landing dev",
    "dev:services": "docker compose -f infra/docker/docker-compose.dev.yml up -d",
    "dev:all": "pnpm dev:services && pnpm dev:web",
    "build": "pnpm -r build",
    "build:all": "pnpm -r build",
    "start": "pnpm --filter web-landing start",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "install:all": "pnpm install",
    "docker:dev": "docker compose -f infra/docker/docker-compose.dev.yml up -d",
    "docker:prod": "docker compose -f infra/docker/docker-compose.prod.yml up -d"
  },
  "devDependencies": {
    "pnpm": "^8.0.0",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0",
    "dotenv-cli": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
