# Development Dockerfile for ai-content-engine-ms

FROM node:20-alpine

WORKDIR /app

# Enable pnpm
RUN corepack enable && corepack prepare pnpm@8.15.0 --activate

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY services/ai-content-engine-ms/package.json ./services/ai-content-engine-ms/
COPY packages ./packages

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source code (will be mounted as volume in docker-compose)
COPY services/ai-content-engine-ms ./services/ai-content-engine-ms

WORKDIR /app/services/ai-content-engine-ms

EXPOSE 3007
6379

CMD ["pnpm", "dev"]
