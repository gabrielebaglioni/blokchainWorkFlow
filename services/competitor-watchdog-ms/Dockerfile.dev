# Development Dockerfile for competitor-watchdog-ms

FROM node:20-alpine

WORKDIR /app

# Enable pnpm
RUN corepack enable && corepack prepare pnpm@8.15.0 --activate

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY services/competitor-watchdog-ms/package.json ./services/competitor-watchdog-ms/
COPY packages ./packages

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source code (will be mounted as volume in docker-compose)
COPY services/competitor-watchdog-ms ./services/competitor-watchdog-ms

WORKDIR /app/services/competitor-watchdog-ms

EXPOSE 3006
6379

CMD ["pnpm", "dev"]
