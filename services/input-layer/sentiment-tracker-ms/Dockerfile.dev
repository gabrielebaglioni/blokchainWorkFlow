# Development Dockerfile for sentiment-tracker-ms

FROM node:20-alpine

WORKDIR /app

# Enable pnpm
RUN corepack enable && corepack prepare pnpm@8.15.0 --activate

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY services/input-layer/sentiment-tracker-ms/package.json ./services/input-layer/sentiment-tracker-ms/
COPY packages ./packages

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source code (will be mounted as volume in docker-compose)
COPY services/input-layer/sentiment-tracker-ms ./services/input-layer/sentiment-tracker-ms

WORKDIR /app/services/input-layer/sentiment-tracker-ms

EXPOSE 3002
6379

CMD ["pnpm", "dev"]
