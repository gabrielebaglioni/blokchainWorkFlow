# Development Dockerfile for telemetry-logger-ms

FROM node:20-alpine

WORKDIR /app

# Enable pnpm
RUN corepack enable && corepack prepare pnpm@8.15.0 --activate

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY services/telemetry-logger-ms/package.json ./services/telemetry-logger-ms/
COPY packages ./packages

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source code (will be mounted as volume in docker-compose)
COPY services/telemetry-logger-ms ./services/telemetry-logger-ms

WORKDIR /app/services/telemetry-logger-ms

EXPOSE 3012
6379

CMD ["pnpm", "dev"]
