# Development Dockerfile for knowledge-base-ms

FROM node:20-alpine

WORKDIR /app

# Enable pnpm
RUN corepack enable && corepack prepare pnpm@8.15.0 --activate

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY services/publishing-layer/knowledge-base-ms/package.json ./services/publishing-layer/knowledge-base-ms/
COPY packages ./packages

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source code (will be mounted as volume in docker-compose)
COPY services/publishing-layer/knowledge-base-ms ./services/publishing-layer/knowledge-base-ms

WORKDIR /app/services/publishing-layer/knowledge-base-ms

EXPOSE 3011
6379

CMD ["pnpm", "dev"]
