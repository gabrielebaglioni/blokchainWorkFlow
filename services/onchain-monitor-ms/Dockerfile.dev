# Development Dockerfile for onchain-monitor-ms

FROM node:20-alpine

WORKDIR /app

# Enable pnpm
RUN corepack enable && corepack prepare pnpm@8.15.0 --activate

# Copy package files
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY services/onchain-monitor-ms/package.json ./services/onchain-monitor-ms/
COPY packages ./packages

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source code (will be mounted as volume in docker-compose)
COPY services/onchain-monitor-ms ./services/onchain-monitor-ms

WORKDIR /app/services/onchain-monitor-ms

EXPOSE 3003
6379

CMD ["pnpm", "dev"]
