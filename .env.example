# ============================================
# HouseBlock Monorepo - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Supabase Configuration
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DB_HOST=db.your-project.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-db-password

# ============================================
# LLM Providers
# ============================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini
GOOGLE_AI_API_KEY=your-google-ai-key
GOOGLE_AI_MODEL=gemini-pro

# ============================================
# Web3 RPC Providers
# ============================================
# Ethereum Mainnet
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-key
ETHEREUM_RPC_FALLBACK=https://mainnet.infura.io/v3/your-key

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-key
POLYGON_RPC_FALLBACK=https://polygon-mainnet.infura.io/v3/your-key

# Arbitrum
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/your-key

# Optimism
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/your-key

# Base
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/your-key

# ============================================
# Docker & Infrastructure
# ============================================
DOCKER_REGISTRY=your-registry.io
DOCKER_NAMESPACE=houseblock

# Grafana
GRAFANA_URL=http://localhost:3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# n8n
N8N_URL=http://localhost:5678
N8N_ENCRYPTION_KEY=your-encryption-key-min-32-chars
N8N_USER_MANAGEMENT_JWT_SECRET=your-jwt-secret

# ============================================
# News Scraper Microservice
# ============================================
NEWS_SCRAPER_PORT=3001
NEWS_SCRAPER_REDIS_URL=redis://localhost:6379
NEWS_SCRAPER_USER_AGENT=HouseBlock-NewsScraper/1.0

# RSS Feeds
RSS_FEED_ETHEREUM=https://blog.ethereum.org/feed.xml
RSS_FEED_ETHEREUM_FOUNDATION=https://ethereum.org/en/blog/feed.xml

# ============================================
# Sentiment Tracker Microservice
# ============================================
SENTIMENT_TRACKER_PORT=3002
SENTIMENT_TRACKER_REDIS_URL=redis://localhost:6379

# ============================================
# Onchain Monitor Microservice
# ============================================
ONCHAIN_MONITOR_PORT=3003
ONCHAIN_MONITOR_REDIS_URL=redis://localhost:6379
ONCHAIN_MONITOR_POLL_INTERVAL=60000

# ============================================
# Trend Analyzer Microservice
# ============================================
TREND_ANALYZER_PORT=3004
TREND_ANALYZER_REDIS_URL=redis://localhost:6379
TREND_ANALYZER_WINDOW_HOURS=24

# ============================================
# Opportunity Detector Microservice
# ============================================
OPPORTUNITY_DETECTOR_PORT=3005
OPPORTUNITY_DETECTOR_REDIS_URL=redis://localhost:6379

# ============================================
# Competitor Watchdog Microservice
# ============================================
COMPETITOR_WATCHDOG_PORT=3006
COMPETITOR_WATCHDOG_REDIS_URL=redis://localhost:6379

# ============================================
# AI Content Engine Microservice
# ============================================
AI_CONTENT_ENGINE_PORT=3007
AI_CONTENT_ENGINE_REDIS_URL=redis://localhost:6379
AI_CONTENT_ENGINE_DEFAULT_MODEL=gpt-4-turbo-preview
AI_CONTENT_ENGINE_MAX_TOKENS=2000

# ============================================
# Visual Generator Microservice
# ============================================
VISUAL_GENERATOR_PORT=3008
VISUAL_GENERATOR_REDIS_URL=redis://localhost:6379
VISUAL_GENERATOR_STORAGE_PATH=/tmp/visuals
VISUAL_GENERATOR_DEFAULT_STYLE=modern-minimal

# DALL-E / Midjourney / Stable Diffusion
VISUAL_GENERATOR_OPENAI_KEY=${OPENAI_API_KEY}
VISUAL_GENERATOR_STABILITY_API_KEY=your-stability-key

# ============================================
# Video Generator Microservice
# ============================================
VIDEO_GENERATOR_PORT=3009
VIDEO_GENERATOR_REDIS_URL=redis://localhost:6379
VIDEO_GENERATOR_STORAGE_PATH=/tmp/videos
VIDEO_GENERATOR_FFMPEG_PATH=/usr/bin/ffmpeg

# ============================================
# Social Publisher Microservice
# ============================================
SOCIAL_PUBLISHER_PORT=3010
SOCIAL_PUBLISHER_REDIS_URL=redis://localhost:6379

# Twitter/X
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-access-token-secret
TWITTER_BEARER_TOKEN=your-bearer-token

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

# Mastodon
MASTODON_INSTANCE=https://mastodon.social
MASTODON_ACCESS_TOKEN=your-mastodon-token

# ============================================
# Knowledge Base Microservice
# ============================================
KNOWLEDGE_BASE_PORT=3011
KNOWLEDGE_BASE_REDIS_URL=redis://localhost:6379
KNOWLEDGE_BASE_EMBEDDING_MODEL=text-embedding-3-large
KNOWLEDGE_BASE_VECTOR_DB=supabase

# ============================================
# Telemetry Logger Microservice
# ============================================
TELEMETRY_LOGGER_PORT=3012
TELEMETRY_LOGGER_REDIS_URL=redis://localhost:6379
TELEMETRY_LOGGER_RETENTION_DAYS=90

# ============================================
# Redis (Shared)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# Application URLs
# ============================================
WEB_LANDING_URL=http://localhost:3000
DASHBOARD_URL=http://localhost:3001

# ============================================
# Security
# ============================================
JWT_SECRET=your-jwt-secret-min-32-chars
API_KEY_HOUSE_BLOCK=your-api-key-for-internal-services

# ============================================
# Development
# ============================================
NODE_ENV=development
LOG_LEVEL=debug
